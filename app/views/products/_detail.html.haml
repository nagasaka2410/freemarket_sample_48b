.detail-box
  %h1.item-name
    = @product.name
  .detail-box__main
    .detail-box__main__image
      .top-image
        = image_tag 'tepodon.jpg', alt: '', height: '300px', width: '300px', class: 'item-image-active'
      .thumbnails
        = image_tag 'tpdn.jpg', alt: '', height: '60px', width: '60px', class: 'item-image'
        = image_tag 'tpdn2.jpg', alt: '', height: '60px', width: '60px', class: 'item-image'
    %table.detail-box__main__table
      %tbody
        %tr
          %th 出品者
          %td
            = link_to "金正恩", "#"
            .user-ratings
              .user-ratings__list
                %i.fas.fa-laugh
                %span 0
              .user-ratings__list
                %i.fas.fa-meh
                %span 0
              .user-ratings__list
                %i.fas.fa-frown
                %span 999
        %tr
          %th カテゴリー
          %td 準中距離弾道ミサイル
        %tr
          %th ブランド
          %td
            = link_to "北朝鮮", "#"
        %tr
          %th 商品のサイズ
          %td 
        %tr
          %th 商品の状態
          %td #{@product.condition}
        %tr
          %th 配送料の負担
          %td #{@product.shipping_burden}
        %tr
          %th 配送の方法
          %td #{@product.shipping_method}
        %tr
          %th 配送元地域
          %td 
            = link_to "北朝鮮", "#"
        %tr
          %th 発送日の目安
          %td #{@product.shipping_date}



  .detail-box__price
    %span.item-price
      = converting_to_jpy(@product.price)
    %span.item-tax (税込)
    %span.shipping-fee 送料込み

  = link_to "購入画面へ進む", "#", type: "button", class: "item-buy-button"
  
  .detail-box__item-description
    %p.item-description
      #{@product.description}
  .detail-box__item-button
    .detail-box__item-button__left
      %button{type:'button', class: 'button-like'}
        %i.far.fa-heart
        %span いいね!
        %span 132
      = link_to "", class: "button-report" do
        %i.far.fa-flag
        不適切な商品の報告 
    .detail-box__item-button__right
      =link_to '#' do
        %i.fas.fa-lock.clock-font
        %span あんしん・あんぜんへの取り組み
.item-comments
  .item-comments__container
    .item-comments__container__message
      %ul.messeage-items
        %li.messeage-coments
          .message-user
            %figure
              .message-user__unknown
                = image_tag("user-icon.svg", size: "32x32")
              %figcaption.bold
                テスト
            .message-seller
              出品者
          .message-body
            .message-body__text
              テストコメント
            .message-body__icon__left
              %time
                %i.far.fa-clock
                %span XX日前
            .message-body__icon__right
              = link_to "" do
                %i.far.fa-flag
        %li.messeage-coments
          .message-user
            %figure
              .message-user__unknown
                = image_tag("user-icon.svg", size: "32x32")
              %figcaption.bold
                テスト
            .message-seller
              出品者
          .message-body
            .message-body__text
              テストコメント
            .message-body__icon__left
              %time
                %i.far.fa-clock
                %span XX日前
            .message-body__icon__right
              = link_to "" do
                %i.far.fa-flag
    .item-comments__container__message
      .form-test
        %p
          相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %textarea{type: "text", class: "textarea-test"}
        %button{type: "submit", class: "btn-test"}
          %span
            コメントする

%ul.item-link-prev-next
  %li.item-link-prev
    = link_to "#" do
      = fa_icon "chevron-left"
      万景峰号
  %li.item-link-next
    = link_to "#" do
      大陸間弾道ミサイル
      = fa_icon "chevron-right"
.detail-box__social-link
  .text-center
  %ul.social-box
    %li
      = link_to "#", target: "_blank", class: "share-btn" do
        %i.fab.fa-facebook-square
    %li
      = link_to "#", target: "_blank", class: "share-btn" do
        %i.fab.fa-twitter
    %li
      = link_to "#", target: "_blank", class: "share-btn" do
        %i.fab.fa-line
    %li
      = link_to "#", target: "_blank", class: "share-btn" do
        %i.fab.fa-pinterest
.related-products
  %section
    %h2.related-products__items-head
      = link_to "#" do
        金正恩さんのその他の出品
    .related-products__items-box
      =render 'item'
      =render 'item'
      =render 'item'



