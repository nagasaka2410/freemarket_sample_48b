.single-container
  = render "header"

  %main.single-main
    %section.registration-container
      %h2.registration-head 会員情報入力

      
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        = f.fields_for :user_detail do |i|
          .registration__basic

            .field
              = f.label :ニックネーム
              %span.require 必須
              %br/
              = f.text_field :nickname, class: "input-default", placeholder: '例)メルカリ太郎'

            .field
              = f.label :メールアドレス
              %span.require 必須
              %br/
              = f.email_field :email, class: "input-default", autocomplete: "email", placeholder: 'PC・携帯どちらでも可'
            .field
              = f.label :パスワード
              - if @minimum_password_length
                -# %em
                  (#{@minimum_password_length} characters minimum)
              %span.require 必須
              %br/
              = f.password_field :password, class: "input-default", autocomplete: "new-password", placeholder: '6文字以上'
          
            .field
              = f.label :"パスワード (確認) "
              %span.require 必須
              %br/
              = f.password_field :password_confirmation, class: "input-default", autocomplete: "new-password", placeholder: '6文字以上'
          
            .field
              %h3.text 本人確認
              %p.caution-text
                安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          
            .field
              = i.label :last_name, "姓 (全角)"
              %span.require 必須
              = i.text_field :last_name, class: "input-default", autocomplete: "last_name", placeholder: '例) 山田'

            .field
              = i.label :first_name, "名 (全角)"
              %span.require 必須
              = i.text_field :first_name, class: "input-default", autocomplete: "first_name", placeholder: '例) 彩'

            .field
              = i.label :last_name_kana, "姓カナ (全角)"
              %span.require 必須
              = i.text_field :last_name_kana, class: "input-default", autocomplete: "last_name_kana"

            .field
              = i.label :first_name_kana, "名カナ (全角)"
              %span.require 必須
              = i.text_field :first_name_kana, class: "input-default", autocomplete: "first_name_kana"
                    
            .field
              = i.label "生年月日"
              %span.require 必須
              %br/  
              .birthday-wrap
                .select
                  = i.select :birth_year, [], {prompt: "--"}, {class: "select-default"}
                %span 年
                .select
                  = i.select :birth_month, [], {prompt: "--"}, {class: "select-default"}
                %span 月
                .select
                  = i.select :birth_day, [], {prompt: "--"}, {class: "select-default"}
                %span 日
              %p.caution-text
                ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
          
          .registration__basic
            .field
            .field
              %p.terms-text
                「次へ進む」のボタンを押すことにより、
                = link_to "利用規約", "#" 
                に同意したものとみなします

          .registration__basic
            %input{type: "button",class: "btn-next", value: "次へ進む"}
            .text-right
              %p
                = link_to "本人情報の登録について", "#" 

          .registration__sms
            .field
              = i.label :mobile_phone, "携帯電話の番号"
              = i.text_field :mobile_phone, class: "input-default", autocomplete: "mobile_phone", placeholder: '携帯電話の番号を入力'
              %p.caution-text
                本人確認のため、携帯電話のSMS(ショートメッセージサービス)を利用して認証を行います。
          
            %input{type: "button",class: "btn-sms", value: "SMSを送信する"}
            %p.caution-text
              ※電話番号は本人確認や不正利用防止のために利用します。他のユーザーに公開されることはありません。
            .text-right
              %p
                =link_to "電話番号の確認が必要な理由", "#" 

        = f.fields_for :user_address do |d|
          .registration__address
            .field
              = d.label :postal_code, "郵便番号"
              %span.require 必須
              = d.text_field :postal_code, class: "input-default", autocomplete: "postal_code", placeholder: '例) 123-4567'
            .field
              = d.label :prefecture, "都道府県" 
              %span.require 必須
              = d.select :prefecture, ["北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県"], {class: "input-default"}
            .field
              = d.label :city, "市区町村" 
              %span.require 必須
              = d.text_field :city, class: "input-default", autocomplete: "city", placeholder: '例) 横浜市緑区'

            .field
              = d.label :block_number, "番地" 
              %span.require 必須
              = d.text_field :block_number, class: "input-default", autocomplete: "block_number", placeholder: '例) 青山1-1-1'

            .field
              = d.label :building, "建物名" 
              %span.optional 任意
              = d.text_field :building, class: "input-default", autocomplete: "building", placeholder: '例) 柳ビル103'

            .field
              = d.label :telephone, "電話" 
              %span.optional 任意
              = d.text_field :telephone, class: "input-default", placeholder: '例) 09012345678'
            
            %input{type: "button",class: "btn-address", value: "次へ進む"}

        = f.fields_for :creditcard do |c|
          .registration__payment

            .field
              = c.label :card_number, "カード番号"
              %span.require 必須
              = c.text_field :card_number, class: "input-default", placeholder: '半角数字のみ'
              %ul.card-list
                %li
                  = image_tag("visa.svg",size: "49x20")
                %li
                  = image_tag("master-card.svg",size: "34x20")
                %li
                  = image_tag("saison-card.svg",size: "30x20")
                %li
                  = image_tag("jcb.svg",size: "32x20")
                %li
                  = image_tag("american_express.svg",size: "21x20")
                %li
                  = image_tag("dinersclub.svg",size: "32x20")
                %li
                  = image_tag("discover.svg",size: "32x20")

            .field
              = f.label :有効期限
              %span.require 必須
              %br/
              .birthday-wrap
                .select
                  = c.select :valid_month, [], {prompt: "--"}, {class: "select-default"}
                %span 月
                .select
                  = c.select :valid_year, [], {prompt: "--"}, {class: "select-default"}
                %span 年

            .field
              = c.label :security_code, "セキュリティコード"
              %span.require 必須
              = c.text_field :security_code, class: "input-default", placeholder: 'カード背面4桁もしくは3桁の番号'
              .text-right__card
                %span.card-question ?
                カード裏の番号とは？

            .actions
              = f.submit class: "btn-end", value: "次へ進む"

  = render "footer"