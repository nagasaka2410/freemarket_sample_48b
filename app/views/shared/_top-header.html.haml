.top-header
  .header-in
    .header-top
      .header-logo
        = link_to image_tag("mercari_logo.svg"),root_path

      .header-search
        = form_tag('/products/search',class: "header-search__input", method: :get) do
          %input.header-search__input--text{name: "keyword", placeholder: "何かお探しですか?", type: "text", value: ""}/
          %button.header-search__input--icon{title: "検索", type: "submit"}
            = fa_icon 'search', class: "search"
            %span<>
    
    .header-bottom
      .h-left
        =link_to categories_path,class: "category-search" do
          = fa_icon 'list', class: "category-search__icon"
          %h2.category-search__title カテゴリーから探す
        =render 'products/category-search'

        =link_to "#",class: "brand-search" do
          = fa_icon 'tag', class: "brand-search__icon"
          %h2.brand-search__title ブランドから探す
        =render 'products/brand-search'

      .h-right
        - if user_signed_in?
          .h-right__list
            =link_to "#",class: "good-index" do
              %i.far.fa-heart.good-index__icon
              %span.good-index__title いいね!一覧
          .h-right__list
            =link_to "#",class: "notification" do
              %i.far.fa-bell.notification__icon
              %span.notification__title お知らせ
          .h-right__list
            =link_to "#",class: "todo" do
              %i.fa.fa-check.todo__icon
              -# = fa_icon 'check', class: "todo__icon"
              %span.todo__title やることリスト
          .h-right__list
            =link_to users_path,class: "top-mypage" do
              = image_tag("icon.png", class: "top-mypage__image")
              %span.top-mypage__text マイページ
        - else
          = link_to "新規会員登録", "/users/new", class: 'signin__button'
          = link_to "ログイン", new_user_session_path, class: 'login__button'
